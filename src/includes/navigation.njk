{% if default.navigation %}
  <nav id="navbar-top" class="navbar navbar-expand-lg navbar-light py-3">
    <div class="container">
      <a class="navbar-brand" href="{{ default.meta.url }}">
        <img class="img-fluid" width="400" height="60" src="{{ '/assets/img/logo.svg' | url }}" alt="{{ default.meta.title }}">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="mainNav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          {% for anchor in default.navigation.items %}
            <li class="nav-item">
              <a class="nav-link" href="{{ default.meta.url ~ '#' ~ anchor.href }}">{{ anchor.label }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
{% endif %}
