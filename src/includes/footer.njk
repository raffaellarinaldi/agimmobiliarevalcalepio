<div id="contact">
  <div class="section">
    <div class="row justify-content-center footer-cta" data-aos="fade-up">
      <div class="col-lg-7 mx-auto text-center">
        <h2 class="mb-4">{{ default.cta.title }}</h2>
        <p class="lead">
          {{ default.cta.copy }}
        </p>
        <p>
          <a class="btn btn-primary text-white py-3 px-4" href="tel://{{ site.phone.land }}" target="_blank">
            <span class="icon-phone me-2"></span>
            {{ default.cta.action }}
          </a>
        </p>
      </div>
    </div>
  </div>
  <div class="m-0 p-0" style="line-height:0">
    <div class="map" data-service="googleMaps" data-id="!1m18!1m12!1m3!1d2789.1614212673803!2d9.9097659!3d45.64758!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47816704f32c9123%3A0x8cbfac0caec16b8!2sAgenzia%20immobiliare%20Valcalepio!5e0!3m2!1sit!2sit!4v1711383379182!5m2!1sit!2sit" data-title="{{ site.title }}" data-thumbnail="{{ '/assets/img/about/about-2.jpg' | url }}" data-lang="{{ lang }}" style="width: 100%; height: 450px; border: 0; outline: 0;" data-autoscale></div>
  </div>
  <footer class="site-footer bg-light text-black-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="widget">
            <h3>{{ default.footer.contact.title }}</h3>
            <address>{{ default.footer.contact.address }}</address>
            <ul class="list-unstyled links">
              <li><a href="tel://{{ site.phone.land }}">{{ site.phone.land }}</a></li>
              <li><a href="tel://{{ site.phone.mobile }}">{{ site.phone.mobile }}</a></li>
              <li><a href="mailto:{{ site.email }}">{{ site.email }}</a></li>
              <li><a href="mailto:{{ site.pec }}">{{ site.pec }}</a></li>
            </ul>
            {% for opening in default.footer.contact.openings %}
              <p class="m-0">{{ opening }}</p>
            {% endfor %}
          </div>
        </div>
        <div class="col-lg-4">
          <div class="widget">
            <h3>{{ default.footer.coverage.title }}</h3>
            {% set towns = default.footer.coverage.towns %}
            {% set total = default.footer.coverage.towns.length %}
            {% set half = (total + 1) // 2 %}
            <ul class="list-unstyled float-start links">
              {% for i in range(0, half) %}
                <li>{{ towns[i] }}</li>
              {% endfor %}
            </ul>
            <ul class="list-unstyled float-start links">
              {% for i in range(half, total) %}
                <li>{{ towns[i] }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="widget">
            <h3>{{ default.footer.websites.title }}</h3>
            <ul class="list-unstyled links">
              {% for key, site in site.network | selectItems({ prop: 'icon', negate: true, withKey: true, keys: ['website', 'mlsagentre'] }) %}
                <li><a href="{{ site.link }}" target="_blank" rel="noopener">{{ site.name }}</a></li>
              {% endfor %}
            </ul>
            <ul class="list-unstyled social">
              {% for key, site in site.network | selectItems({ prop: 'icon', withKey: true, keys: ['facebook', 'youtube', 'google', 'linkedin'] }) %}
                <li>
                  <a href="{{ site.link }}" target="_blank" rel="nofollow noreferrer noopener">
                    <span class="icon-{{ site.icon }}"></span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      <div class="d-flex flex-column flex-xl-row justify-content-xl-between align-items-center mt-5 text-center">
        <div class="text-xl-start">
          <p class="mb-0">{% copyright undefined, lang, 'all', site.title %}</p>
        </div>
        <div class="text-center">
          <p class="mb-0">{% cookieConsent 'consent', lang, undefined %}</p>
        </div>
        <div class="text-xl-end">
          <p class="mb-0">{% createdBy lang, undefined, [{ url: 'https://untree.co/', name: 'Untree' }] %}</p>
        </div>
      </div>
    </div>
  </footer>
</div>
