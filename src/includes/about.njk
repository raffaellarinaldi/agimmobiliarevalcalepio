<div id="about" class="section section-4 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-lg-5">
        <h2 class="font-weight-bold heading text-primary mb-4">
          {{ default.about.title }}
        </h2>
        <p>
          {{ default.about.copy }}
        </p>
      </div>
    </div>
    <div class="row justify-content-between mb-5">
      <div class="col-lg-7 mb-5 mb-lg-0 order-lg-2">
        <div class="img-about dots">
          <img class="img-fluid" src="{{ '/assets/img/about/about-1.jpg' | url }}" alt="{{ site.title }}">
        </div>
      </div>
      <div class="col-lg-4">
        {% for highlight in default.about.highlights %}
          <div class="d-flex feature-h">
            <span class="wrap-icon me-3">
              <span class="icon-{{ highlight.icon }}"></span>
            </span>
            <div class="feature-text">
              <h3 class="heading">{{ highlight.title }}</h3>
              <p>{{ highlight.copy }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="row pt-5">
      {% for card in default.about.cards %}
        <div class="col-md-4 {{ ' mt-lg-5' if loop.index % 2 == 0 else '' }}" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
          <img class="img-fluid" src="{{ ('/assets/img/cards/card-' ~ loop.index ~ '.jpg') | url }}" alt="{{ card }}">
        </div>
      {% endfor %}
    </div>
    <div class="row section-counter mt-5">
      {% for counter in default.about.counters %}
        <div class="col-6 col-sm-6 col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 + 300 }}">
          <div class="counter-wrap mb-5 mb-lg-0">
            <span class="number">
              <span class="countup text-primary">{{ counter.value }}</span>+
            </span>
            <span class="caption">{{ counter.label }}</span>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
